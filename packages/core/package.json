{
  "name": "@unacy/core",
  "version": "0.1.0",
  "description": "Type-safe unit and format conversion library",
  "type": "module",
  "author": "Pradeep Mouli",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
