    "test:watch": "vitest"
  },
  "dependencies": {
    "type-fest": "^5.3.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
