{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:weekly"],
  "packageRules": [
    {
      "description": "Auto-merge minor and patch updates",
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "groupName": "TypeScript and related",
      "matchPackageNames": [
        "typescript",
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "@types/*"
      ]
    },
    {
      "groupName": "Testing frameworks",
      "matchPackageNames": ["vitest", "@vitest/*", "@testing-library/*"]
    },
    {
      "groupName": "Code quality tools",
      "matchPackageNames": ["oxlint", "oxfmt", "lint-staged", "commitlint"]
    },
    {
      "groupName": "Build tools",
      "matchPackageNames": ["tsx", "tsconfig", "vite"]
    },
    {
      "groupName": "Runtime dependencies",
      "matchPackagePatterns": ["^(?!@types/)"],
      "matchDepTypes": ["dependencies"]
    },
    {
      "description": "Update GitHub Actions",
      "matchDatasources": ["github-tags"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    }
  ],
  "schedule": ["before 6am on Monday"],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "labels": ["dependencies"],
  "reviewers": [],
  "rebaseWhen": "conflicted",
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "rangeStrategy": "auto",
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 3am on the first day of the month"]
  }
}
